.text-center
  text-align: center !important
.vertical-middle
  vertical-align: middle !important
.d-inline-block
  display: inline-block

.invert
  filter: invert(1) hue-rotate(180deg)
.url
  display: block
  font-size: 40%
  font-family: monospace
.sep
  display: inline-block
