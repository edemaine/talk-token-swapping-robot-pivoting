:root
  --bad-color: hsl(0,50%,40%)
rect, polygon
  &.robot, &.bad, &.empty
    stroke-width: 0.1
  &.robot
    fill: hsl(195, 25%, 50%)
    stroke: white
    &.r1
      fill: hsl(265, 80%, 60%)
      stroke: hsl(265, 80%, 80%)
    &.r2
      fill: hsl(111, 55%, 40%)
      stroke: hsl(111, 55%, 75%)
  &.bad, &.empty
    stroke: hsl(0,0%,25%)
  &.bad
    fill: url(#hatch) var(--bad-color)

:root
  --rotate-duration: 3s
.rotate-60-1o2
  animation: alternate linear infinite rotate-60-1o2 var(--rotate-duration)
.rotate-60-2o2
  animation: alternate linear infinite rotate-60-2o2 var(--rotate-duration)
.rotate-90
  animation: alternate linear infinite rotate-90 var(--rotate-duration)
.rotate-90-1o2
  animation: alternate linear infinite rotate-90-1o2 var(--rotate-duration)
.rotate-90-2o2
  animation: alternate linear infinite rotate-90-2o2 var(--rotate-duration)
.rotate-120
  animation: alternate linear infinite rotate-120 var(--rotate-duration)
.rotate-180
  animation: alternate linear infinite rotate-180 var(--rotate-duration)
@keyframes rotate-60-1o2
  0%, 25%
    transform: rotate(0deg)
  50%, 100%
    transform: rotate(60deg)
@keyframes rotate-60-2o2
  0%, 50%
    transform: rotate(0deg)
  75%, 100%
    transform: rotate(60deg)
@keyframes rotate-90
  0%, 25%
    transform: rotate(0deg)
  75%, 100%
    transform: rotate(90deg)
@keyframes rotate-90-1o2
  0%, 25%
    transform: rotate(0deg)
  50%, 100%
    transform: rotate(90deg)
@keyframes rotate-90-2o2
  0%, 50%
    transform: rotate(0deg)
  75%, 100%
    transform: rotate(90deg)
@keyframes rotate-120
  0%, 25%
    transform: rotate(0deg)
  75%, 100%
    transform: rotate(120deg)
@keyframes rotate-180
  0%, 25%
    transform: rotate(0deg)
  75%, 100%
    transform: rotate(180deg)
.show-first-half
  animation: alternate linear infinite show-first-half var(--rotate-duration)
.show-second-half
  animation: alternate linear infinite show-second-half var(--rotate-duration)
@keyframes show-first-half
  0%, 40%
    opacity: 1
  60%, 100%
    opacity: 0
@keyframes show-second-half
  0%, 40%
    opacity: 0
  60%, 100%
    opacity: 1

.robots > svg, .hexrobots > svg
  width: 100%
  flex-grow: 1
  overflow: visible  // for animation overflow
  &:only-child
    height: 100%

.pivotCenter
  fill: hsl(308, 75%, 60%)
  stroke: hsl(308, 75%, 25%)
  stroke-width: 0.07
